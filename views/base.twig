{% block html_head_container %}
{% include 'html-header.twig' %}
{% block head %}
{% endblock %}
</head>
{% endblock %}
<body class="{{body_class}}" data-template="base.twig">
    {% include 'svg-defs.svg' %}
    <header class="header" >
        {% block header %}
        <div class="header__top">
            <a href="/" class="logo" title="{{site.name}}">
                <img src="{{site.theme.uri}}/img/logo.png" alt="{{site.name}}">
            </a>
            <div class="menu__icon">
                <span class="menu--open">
                    <svg><use xlink:href="#shape-icon-close" /></svg>
                </span>
                <span class="menu--close">
                    <svg><use xlink:href="#shape-icon-menu" /></svg>
                </span>
            </div>
        </div>
        <div class="header__bottom">
            <nav class="lang-menu" role="navigation">
                <ul>
                    {% for item in menu_lenguajes.get_items %}
                    <li class="{{item.classes | join(' ')}}">
                        {% include "menu.twig" with {'menu': item.get_children} %}
                    </li>
                    {% endfor %}
                </ul>
            </nav><!-- .lang-menu -->
            <nav id="nav-main" class="nav-main" role="navigation">
                {% include "menu.twig" with {'menu': menu.get_items} %}
            </nav><!-- #nav -->
            {% endblock %}
        </div>
    </header>

    <section id="content" role="main" class="content-wrapper">
        {% if title %}<h1>{{title}}</h1>{% endif %}
        <div class="wrapper {{sidebar_class}}">
            {% block content %}
            Sorry, no content
            {% endblock %}
        </div>
        {% if sidebar %}
        <aside class="layout-sidebar">
            {{sidebar}}
        </aside>
        {% endif %}
    </section>

    {% block footer_html %}
    {% include 'footer.twig' %}
    {{ function('wp_footer') }}
    {% block footer %}
    {% endblock %}
    {% endblock %}
</body>
</html>